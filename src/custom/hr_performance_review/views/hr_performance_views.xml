<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hr_performance_form" model="ir.ui.view">
            <field name="name">hr.performance.review.form</field>
            <field name="model">hr.performance.review</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_complete" string="Completar" type="object" class="oe_highlight" invisible="state == 'completed'"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_id"/>
                                <field name="reviewer_id"/>
                            </group>
                            <group>
                                <field name="review_date"/>
                                <field name="score"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Evaluaci칩n">
                                <field name="comments" placeholder="Observaciones..."/>
                                <field name="strengths" placeholder="Fortalezas..."/>
                                <field name="weaknesses" placeholder="Debilidades..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_hr_performance_kanban" model="ir.ui.view">
            <field name="name">hr.performance.review.kanban</field>
            <field name="model">hr.performance.review</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state">
                    <field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title"><field name="employee_id"/></strong>
                                    <div>Calificaci칩n: <field name="score"/></div>
                                    <div>Fecha: <field name="review_date"/></div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="action_hr_performance" model="ir.actions.act_window">
            <field name="name">Evaluaciones de Desempe침o</field>
            <field name="res_model">hr.performance.review</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

        <menuitem id="menu_hr_performance_root" name="Desempe침o" action="action_hr_performance" web_icon="hr_performance_review,static/description/icon.png"/>
    </data>
</odoo>