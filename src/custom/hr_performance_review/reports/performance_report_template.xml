<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_performance_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <div class="oe_structure"/>
                            <h2 class="text-center">Certificado de Evaluación de Desempeño</h2>
                            <br/>
                            <div class="row">
                                <div class="col-6">
                                    <strong>Empleado:</strong> <span t-field="o.employee_id.name"/><br/>
                                    <strong>Evaluador:</strong> <span t-field="o.reviewer_id.name"/>
                                </div>
                                <div class="col-6 text-end">
                                    <strong>Fecha:</strong> <span t-field="o.review_date"/><br/>
                                    <strong>Calificación:</strong> <span t-field="o.score"/> / 10.0
                                </div>
                            </div>
                            <br/>
                            <h4>Comentarios Generales</h4>
                            <p t-field="o.comments"/>
                            <hr/>
                            <div class="row">
                                <div class="col-6">
                                    <strong>Fortalezas:</strong>
                                    <p t-field="o.strengths"/>
                                </div>
                                <div class="col-6">
                                    <strong>Debilidades:</strong>
                                    <p t-field="o.weaknesses"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>